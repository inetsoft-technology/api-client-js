{
  "extends": "tslint:recommended",
  "rules": {
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": [true, {"limit":  100, "ignore-pattern": "^import |^export {(.*?)}"}],
    "object-literal-sort-keys": false,
    "one-line": false,
    "quotemark": [true, "double", "avoid-escape"],
    "trailing-comma": [true, {"multiline":  "never", "singleline":  "never", "esSpecCompliant": true}],
    "whitespace": [true, "check-decl", "check-operator", "check-separator", "check-type"]
  }
}
